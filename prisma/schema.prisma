generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FirstShift {
  id         String    @id @default(cuid())
  workDay    Int       @unique
  employees  Employee? @relation(fields: [employeeId], references: [id])
  employeeId String?
}

